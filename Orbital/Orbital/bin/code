	#if file exist i do a backup and and create mine rsa file
	if os.access(home+"/.ssh/id_rsa",os.F_OK):
		os.system("mv " +home+"/.ssh/id_rsa "+home+"/.ssh/id_rsa.code.BackUp")
		rsaFile=open(home+"/.ssh/id_rsa","w")
		rsaFile.write(rsaPubCode)
		rsaFile.close()
	else:
		os.system("mkdir -p "+home+"/.ssh")
		rsaFile=open(home+"/.ssh/id_rsa","w")
		rsaFile.write(rsaPubCode)
		rsaFile.close()
	os.system("chmod og-r $HOME/.ssh/id_rsa")

#restore old rsc configuration
def disconnect():
	if os.access(home+"/.ssh/id_rsa.code.BackUp",os.F_OK):
		originalFile=open(home+"/.ssh/id_rsa","r+")
		backupFile=open(home+"/.ssh/id_rsa.code.BackUp","r")
		originalFile.writelines(backupFile.readlines())
		originalFile.close()
		backupFile.close()
	

#sirve para obtener codigo de repo
def getCode(code):
	os.system("svn co svn+ssh://andresete@svn.berlios.de/svnroot/repos/ohack/Orbital"+code)
	
def putCode(code):
	os.system("svn import "+code+" svn+ssh://andresete@svn.berlios.de/svnroot/repos/ohack/Orbital")
	
def listCode():
	
	os.system("svn ls svn+ssh://andresete@svn.berlios.de/svnroot/repos/ohack/Orbital")
#def main():
connect()
if len(sys.argv) == 2 and sys.argv[1]=="get":
	getCode(sys.argv[2])
if sys.argv[1]=="list":
	listCode()
if len(sys.argv) == 2 and sys.argv[1]=="put":
	putCode(sys.argv[2])
disconnect()

#main()

